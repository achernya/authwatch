# $Id: Makefile.in,v 1.1 2002-01-23 22:15:29 mwhitson Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@KRB5_LIBS@ @LIBS@
ALL_CFLAGS=`gnome-config --cflags gnomeui` ${CPPFLAGS} ${CFLAGS} ${DEFS}
ALL_LIBS=`gnome-config --libs gnomeui` ${LIBS}

all: authwatch

authwatch: authwatch.o
	${CC} ${LDFLAGS} -o $@ authwatch.o ${ALL_LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	${INSTALL_PROGRAM} authwatch ${DESTDIR}${bindir}
	${INSTALL} authwatch.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f authwatch.o authwatch

distclean: clean
	rm -f config.cache config.log config.status Makefile
